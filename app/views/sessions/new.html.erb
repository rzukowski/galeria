<h1>Zaloguj się</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>Jesteś nowym użytkownikiem <%= link_to "Zarejestruj się teraz!", signup_path %></p>
